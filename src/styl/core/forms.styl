.uk-form-icon
  input
    color input-color!important
    &.tm-form-cloud
      position relative
      width 100%
      font-size 23px
      font-weight 300
      height 60px !important
      line-height 30px
      +placeholder()
        color placeholder-color
    &:focus
      background-color rgb(249, 249, 249)!important
      +placeholder()
        color placeholder-color

  .uk-icon-right
    margin-left -40px
    margin-top -7px
    color #6d6d6d
    font-size 18px
    &.tm-icon-right-clear
      margin-left -70px

  &.cloud-form-icon
    .uk-icon-at
      margin-top -15px
      margin-left 10px

.uk-form-icon:not(.uk-form-icon-flip)>input
  padding-left 50px!important
  padding-right 70px!important